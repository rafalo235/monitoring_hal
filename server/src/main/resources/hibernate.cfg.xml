		<mapping class="com.hall.monitor.database.data.Request" />
		<mapping class="com.hall.monitor.database.data.RequestConf" />
		<mapping class="com.hall.monitor.database.data.Sensor" />
		<mapping class="com.hall.monitor.database.data.SensorConf" />
		<mapping class="com.hall.monitor.database.data.SensorData" />
		<mapping class="com.hall.monitor.database.data.User" />


	</session-factory>
</hibernate-configuration>
